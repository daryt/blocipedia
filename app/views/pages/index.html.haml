  - @pages.each do |page|
    %tr
      %td= page.title
      %td= link_to 'Show', wiki_page_path(wiki_id: page.wiki_id, id: page.id)
      %td= link_to 'Edit', edit_wiki_page_path(wiki_id: page.wiki_id, id: page.id)
      %td= link_to 'Destroy', wiki_page_path(wiki_id: page.wiki_id, id: page.id), :method => :delete, :data => { :confirm => 'Are you sure?' }

