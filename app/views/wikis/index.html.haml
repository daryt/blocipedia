%h1 Listing #{current_user.name}'s wikis

%table
  %tr
    %th Title
    %th User
    %th Is private
    %th
    %th
    %th

  - @wikis.each do |wiki|
    %tr
      %td= wiki.title
      %td= wiki.user_id
      %td= wiki.is_private
      %td= link_to 'Show', wiki_pages_path(wiki)
      %td= link_to 'Edit', edit_wiki_path(wiki)
      %td= link_to 'Destroy', wiki, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Wiki', new_wiki_path
